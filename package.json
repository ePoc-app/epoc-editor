{
  "name": "epoc-editor-v2",
  "author": {
    "name": "Inria Learning Lab",
    "email": "ill-ePoc-contact@inria.fr"
  },
  "icon": "favicon.png",
  "private": true,
  "version": "0.0.0",
  "main": "electron/electron.js",
  "scripts": {
    "electron": "wait-on tcp:8000 && cross-env IS_DEV=true electron .",
    "electron:builder": "electron-builder",
    "dev": "concurrently -k 'cross-env BROWSER=none vite' 'npm run electron'",
    "build": "vue-tsc --noEmit && cross-env ELECTRON=true vite build && npm run electron:builder",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "wdio": "wdio run ./wdio.conf.ts",
    "lint": "npx eslint ./src ./test ./electron/* --ext .ts,.vue,.js"
  },
  "dependencies": {
    "@vue-flow/additional-components": "^1.3.3",
    "@vue-flow/core": "^1.6.0",
    "pinia": "^2.0.28",
    "sass": "^1.56.2",
    "vue": "^3.2.45",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/test-utils": "^2.2.6",
    "@wdio/cli": "^8.0.13",
    "@wdio/local-runner": "^8.0.13",
    "@wdio/mocha-framework": "^8.0.13",
    "@wdio/spec-reporter": "^8.0.13",
    "chromedriver": "^108.0.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "eslint": "^8.29.0",
    "eslint-plugin-vue": "^9.8.0",
    "happy-dom": "^8.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.0",
    "vitest": "^0.25.8",
    "vue-tsc": "^1.0.11",
    "wait-on": "^6.0.1",
    "wdio-chromedriver-service": "^8.0.1",
    "wdio-electron-service": "^3.5.0"
  },
  "build": {
    "appId": "fr.inria.epoc-editor",
    "productName": "ePoc Editor",
    "copyright": "Copyright Â© 2022 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
